<div class="container">

  <div class="row" align="center">
    <div class="bg-sign-in col-lg-12 ">
      <h2 class="green-text padding">Log In To Your Artbnb Account</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class= "form-group padding">
          <div class="col-sm-6" align="center">
            <%= f.text_field :email, class: "form-control", placeholder: "Please enter your email", autofocus: true %>
          </div>
         
          <div class="col-sm-6">
            <%= f.password_field :password, class: "form-control", placeholder: "Please enter your password", autocomplete: "off" %>
          </div>
         </div>

         <div><br /></div>

        <% if devise_mapping.rememberable? -%>
          <div class="field white-text">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div><br /></div>

          <div class="form-group">
            <div class="col-sm-12">
              <%= f.submit "Log In", class: 'btn green-button btn-lg' %>
            </div>
          </div>
      <% end %>
    </div>

    <div class="bg-green-banner padding col-lg-12">
      <h2>Not A Member Yet?</h2>
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
