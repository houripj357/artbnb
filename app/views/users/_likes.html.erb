<div class='col-lg-12 center padding green-text'>
  <% if @user == current_user %>
  <p class="green-text"><h2 align="center"> Your favorite pieces of art: </h2></p>
<% else %>
  <p><h2 align="green-text center"> <%= @user.name %>'s favorite pieces of art:</h2></p>
<% end %>

</div>
<div class='col-lg-12 center '>
  <div class='col-lg-12 center padding'>
<% if @user.likes.size > 0 %>
<ul>
<% @user.likes.in_groups_of(3, false).each do |group| %>
  <div class='row col-lg-12'>
    <center>
    <% group.each do |like| %>
    <li>
      <div class='col-md-4 padding'>
        <p>
          <%= link_to image_tag(like.artwork.image.url(:medium)), artwork_path(like.artwork) %>
          <h4><%= like.artwork.title %></h4>
          <h5><%= like.artwork.user.name %> | <%= like.artwork.user.city %></h5>
          <h4><%#= number_to_currency(like.artwork.price) %></h4>
        </p>
      </div>
      </li>
    <% end %>
    <br />
  </center> 

  </div>
<% end %>
</ul>
</div>
<div>
<br />
</div>
<% else %>
<div class= "row col-lg-12 center">
  <% if @user == current_user %>
    <p class= "lead">You haven't liked any artwork yet!</p>
  <% else %>
    <p class= "lead"><%= @user.name %> hasn't liked any artwork yet!</p>
  <% end %>
</div>
<% end %>
<p><%= link_to "See More Art!", artworks_path %></p>
</div>