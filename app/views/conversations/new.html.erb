<h1>Send new message</h1>

<%= form_tag conversations_path, method: :post do %>
	<div>
		<%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name) %>
	</div>

	<div>
		<%= text_field_tag :subject, nil, placeholder: "Subject" %>
	</div>

	<div>
		<%= text_area_tag :body, nil, placeholder: "Leave a message" %>
	</div>

	<div>
		<%= file_field_tag :attachment %>
	</div>

	<%= submit_tag %>	
<% end %>